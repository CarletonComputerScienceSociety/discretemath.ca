---
import BaseLayout from "../layouts/BaseLayout.astro";
import HomeLayout from "../layouts/HomeLayout.astro";
import { Button } from "../components";
---

<BaseLayout title="DiscreteMath.ca">
  <HomeLayout>
    <div class="home-layout">
      <div class="header-parent">
        <img
          class="header-image"
          src="./images/home-page-logo.png"
          alt="DiscreteMath.ca"
        />
        <div class="header-title">Learn Without Limits.</div>
        <div class="header-description">
          Built by Carleton students, for Carleton students. DiscreteMath.ca is
          an interactive platform built specifically for content from Carleton's
          discrete mathematics courses.
        </div>
        <div class="home-buttons">
          <!-- TODO: remove ./ -->
          <a href="./comp1805">
            <Button label="comp 1805" />
          </a>
          <a href="./comp2804">
            <Button label="comp 2804" />
          </a>
        </div>
        <div class="lottie">
          <div style="width: 950px; height: 950px; position: relative;"></div>
        </div>
      </div>
    </div>
  </HomeLayout>
</BaseLayout>

<style lang="scss">
  .home-buttons {
    a {
      text-decoration: none;
    }
  }
  .header-image {
    height: 5rem;
    margin-bottom: 1.5rem;
  }

  .header-title {
    font-size: 75px;
    font-weight: 700;
    margin-bottom: 1rem;
    font-family: "Assistant", sans-serif;
    text-align: center;
  }
  .header-description {
    max-width: 70rem;
    margin-bottom: 2rem;
    font-size: 20px;
    font-family: "Assistant", sans-serif;
    text-align: center;
  }

  .header-parent {
    flex-direction: column;
    margin-top: 1rem;
    display: flex;
    width: 100%;
    justify-content: space-evenly;
    align-items: center;
    margin-bottom: 3rem;
    max-width: 50rem;
  }

  .home-layout {
    display: flex;
    width: 100%;
    flex-direction: column;
    justify-content: space-evenly;
    align-items: center;
    margin-bottom: 3rem;
    margin-top: 2rem;
  }
</style>
